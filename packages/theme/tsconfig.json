{
  "compilerOptions": {
    "baseUrl": ".",
    "module": "ESNext",
    "outDir": "dist",
    "target": "esnext",
    "moduleResolution": "node",
    "strict": true,
    "jsx": "preserve",
    "esModuleInterop": true,
    "noUnusedLocals": true,
    "lib": ["ESNext", "DOM"],
    "skipLibCheck": true,
    "allowJs": true,
    "resolveJsonModule": true,
    "paths": {
      "@soliviorx/theme/node": ["./node"],
      "@soliviorx/theme": ["src/index.ts"]
    }
  },
  "include": [
    "src",
    "types",
    "demo/.vitepress/theme",
    "demo/.vitepress/config.ts"
  ],
  "exclude": ["node_modules", "dist", "node.d.ts"]
}
